<p id="notice"><%= notice %></p>

<h3>Your Pragmatic Catalog</h3>

<% @products.each do |product| %>
<div class="row" style="padding:10px;">
  <div class="col-lg-3">
    <%= image_tag(product.image_url, class: "img-responsive img-thumbnail") %>
  </div>
  <div class="col-lg-9">
    <h4><%= product.title %></h4>
    <%= sanitize(product.description) %>
    <strong><%= number_to_currency(product.price) %></strong><br><br>
    <%= button_to 'Add to Cart', line_items_path(product_id: product), class: "btn btn-default btn-sm" %>
  </div>
</div>
<% end %>
