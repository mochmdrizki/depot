<p id="notice"><%= notice %></p>

<h3>Products</h3>

<table class="table table-striped">
  <% @products.each do |product| %>
    <tr>
      <td style="text-align:center">
        <b><%= product.title %></b><br>
        <center><%= image_tag(product.image_url, class: "img-responsive img-thumbnail", width: "150px") %></center>
      </td>
      <td><%= truncate(strip_tags(product.description), length: 100) %></td>
      <td>
        <%= link_to 'Show', product, class: "btn btn-link btn-sm" %>
        <%= link_to 'Edit', edit_product_path(product), class: "btn btn-link btn-sm" %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link btn-sm" %>
      </td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
