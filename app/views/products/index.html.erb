<p id="notice"><%= notice %></p>

<h2>Products</h2>

<table class="table table-striped">
  <% @products.each do |product| %>
    <tr>
      <td>
        <b><%= product.title %></b>
        <%= product.image_url %>
        <%= product.price %>
      </td>
      <td><%= truncate(strip_tags(product.description), length: 80) %></td>
      <td>
        <%= link_to 'Show', product, class: "btn btn-link btn-sm" %>
        <%= link_to 'Edit', edit_product_path(product), class: "btn btn-link btn-sm" %>
        <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link btn-sm" %>
      </td>
    </tr>
  <% end %>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
